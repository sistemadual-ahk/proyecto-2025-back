// tsconfig.json
{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs", // Or "esnext" if you're using ES Modules
    "rootDir": "./src", // Specifies the root directory of your source files
    "outDir": "./dist", // Where your compiled JS files will go
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // If you want to use baseUrl, it might look like this:
    "baseUrl": "./src", // This sets the base directory for module resolution
    "paths": {
      "@config/*": ["config/*"], // Example of path mapping
      "@controllers/*": ["main/controllers/*"],
      "@services/*": ["main/services/*"],
      "@routes/*": ["main/routes/*"],
      "@models/*": ["main/models/*"],
      "@middlewares/*": ["main/middlewares/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}