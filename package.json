{
  "name": "proyecto-2025-back",
  "version": "1.0.0",
  "description": "Backend del proyecto 2025 con Node.js y TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start": "node -r ./tsconfig-paths-bootstrap.js dist/index.js",
    "start:prod": "node -r ./tsconfig-paths-bootstrap.js dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "docker:build": "docker build -t proyecto-2025-back .",
    "docker:smoke": "node scripts/docker-smoketest.js",
    "docker:run": "docker run -p 3000:3000 proyecto-2025-back",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f app",
    "docker:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up -d",
    "docker:dev": "docker-compose --profile dev up -d",
    "docker:status": "docker-compose ps",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sistemadual-ahk/proyecto-2025-back.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "mongodb",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sistemadual-ahk/proyecto-2025-back/issues"
  },
  "homepage": "https://github.com/sistemadual-ahk/proyecto-2025-back#readme",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.24.0",
    "@types/express": "^5.0.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.2",
    "@types/node-telegram-bot-api": "^0.64.11",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^8.0.0",
    "jwks-rsa": "^3.2.0",
    "mongoose": "^8.17.0",
    "morgan": "^1.10.0",
    "node-telegram-bot-api": "^0.66.0",
    "openai": "^6.7.0",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
